@page
@model LoginSampleTripleA.Pages.Users.ListModel
@{
}
<main class="container">

<h2>Users List</h2>
<hr />
<table class="table table-striped table-bordered">
    <tr>
        <td>Id</td>
        <td>User Name</td>
        <td>Email</td>
    </tr>
    @if (Model.Users.Count() < 1)
    {
        <tr>
            <td colspan="2">No User In DataBase</td>
        </tr>
    }
    else
    {
        foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
            </tr>
        }
    }
</table>

<a class="btn btn-success" asp-page="Create">Create</a>