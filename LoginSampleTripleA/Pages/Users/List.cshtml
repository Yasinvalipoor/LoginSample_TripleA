 @page
@model LoginSampleTripleA.Pages.Users.ListModel
@{
}

<h2>Users List</h2>
<hr />
<table class="table table-striped table-bordered">
    <tr>
        <td>Id</td>
        <td>User Name</td>
        <td>Email</td>
        <td>
            Actions
        </td>
    </tr>
    @if (Model.Users.Count() < 1)
    {
        <tr>
            <td colspan="4">No User In DataBase</td>
        </tr>
    }
    else
    {
        foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@user.Id">Edit</a>
                    <form method="post">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<a class="btn btn-success" asp-page="Create">Create</a>